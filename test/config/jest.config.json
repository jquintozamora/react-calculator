{
  "rootDir": "../../",
  "roots": ["<rootDir>/src"],
  "verbose": true,
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?|js?|ts?)$",
  "moduleFileExtensions": ["ts", "tsx", "js", "jsx", "json", "node"],
  "moduleNameMapper": {
    "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/test/unit/__mocks__/fileMock.js",
    "\\.(css)$": "identity-obj-proxy",
    "^styled-components": "<rootDir>/node_modules/styled-components"
  },
  "setupTestFrameworkScriptFile": "<rootDir>/test/setup/frameworkScriptFile.ts",
  "testURL": "http://localhost",
  "testEnvironment": "node",
  "coverageDirectory": "./coverage/",
  "collectCoverage": false,
  "coveragePathIgnorePatterns": [
    "./src/components/icons"
  ]
}
